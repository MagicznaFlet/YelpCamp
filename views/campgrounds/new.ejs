<%- layout('layouts/boilerplate') %>
    <div class="row">
        <div class="text-center">New Campground</div>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="validated-form needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                    <div class="valid-feedback">
                        <p>Looks good!</p>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>
                    <div class="valid-feedback">
                        <p>Looks good!</p>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Add image:</label>
                    <input class="form-control" type="file" name="image" id="image" multiple required>
                    <small id="fileLabel" class="form-text text-muted">No files selected</small>
                    <div class="valid-feedback">
                        <p>Looks good!</p>
                    </div>
                </div>
                
                <script>
                    const input = document.getElementById('image');
                    const fileLabel = document.getElementById('fileLabel');

                    input.addEventListener('change', () => {
                        if (input.files.length === 0) {
                            fileLabel.textContent = "No files selected";
                        } else {
                            fileLabel.textContent = [...input.files].map(f => f.name).join(", ");
                        }
                    });
                </script>

                <div class="mb-3">
                    <label class="form-label" for="price">Price:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" placeholder="0" aria-label="Price"
                            aria-describedby="price-label" name="campground[price]" id="price" required>
                        <div class="valid-feedback">
                            <p>Looks good!</p>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" name="campground[description]" id="description" cols="30" rows="10"
                        required></textarea>
                    <div class="valid-feedback">
                        <p>Looks good!</p>
                    </div>
                </div>
                <button class="btn btn-success" type="submit">Add Campground</button>
            </form>
        </div>
    </div>